{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2016",
    "moduleDetection": "auto",
    "module": "CommonJS",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"]
    },
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
